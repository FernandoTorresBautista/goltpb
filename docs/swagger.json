    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/v1/ltp": {
            "get": {
                "description": "GetInfo return the Last Traded Price of Bitcoin for the following currency pairs: BTC/USD, BTC/CHF, BTC/EUR",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "LTPB"
                ],
                "summary": "GetInfo",
                "responses": {
                    "200": {
                        "description": "return the list of pairs",
                        "schema": {
                            "$ref": "#/definitions/v1.OutputResponse"
                        }
                    },
                    "400": {
                        "description": "return the error of the bad request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "return the error of the failure in the API",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "v1.OutputResponse": {
            "type": "object",
            "properties": {
                "ltp": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "amount": {
                                "type": "string"
                            },
                            "pair": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
